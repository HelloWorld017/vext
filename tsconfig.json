{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "./dist",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "@types/node",
      "react",
      "vite/client",
      "vite-plugin-svgr/client",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "docs/**/*.ts",
    "docs/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "vite.config.types.ts"
  ],
  "ts-node": {
    "swc": true
  }
}
